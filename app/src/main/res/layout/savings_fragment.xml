<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    tools:context=".views.SavingsFragment">

    <TextView
        android:id="@+id/lbl_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/num_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$300,00"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/lbl_balance"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_balance"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/lbl_inputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/lbl_inputs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_inputs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lbl_inputs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/lbl_total_inputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_total"
                app:layout_constraintTop_toBottomOf="@id/rv_inputs"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/num_total_inputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$300,00"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/rv_inputs"
                app:layout_constraintStart_toEndOf="@id/lbl_total_inputs"/>

            <TextView
                android:id="@+id/lbl_outputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/lbl_outputs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_inputs" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_outputs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lbl_outputs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/lbl_total_outputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_total"
                app:layout_constraintTop_toBottomOf="@id/rv_outputs"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/num_total_outputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$300,00"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/rv_outputs"
                app:layout_constraintStart_toEndOf="@id/lbl_total_outputs"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>